# ignore everything in the root except the "wp-content" directory.
!wp-content/

# ignore everything in the "wp-content" directory, except:
# "mu-plugins", "plugins", "themes" directory
wp-content/*
!wp-content/plugins/
!wp-content/themes/

# ignore these plugins and other files
wp-content/plugins/buddyboss-platform-pro/
wp-content/plugins/buddyboss-platform/
wp-content/plugins/buddypress-group-email-subscription/
wp-content/plugins/facetwp/
wp-content/plugins/the-events-calendar-community-events/
wp-content/plugins/the-events-calendar/
wp-content/plugins/worker/
wp-config.php
wp-content/mu-plugins/

# ignore specific themes
wp-content/themes/twenty*/
wp-content/themes/buddyboss-theme/

# ignore node dependency directories
node_modules/

# ignore all files starting with . or ~
.*
~*

# ignore log files and databases
*.log
*.sql
*.sqlite

# ignore compiled files
*.com
*.class
*.dll
*.exe
*.o
*.so

# ignore packaged files
*.7z
*.dmg
*.gz
*.iso
*.jar
*.rar
*.tar
*.zip

# ignore OS generated files
ehthumbs.db
Thumbs.db
.DS_Store

# ignore Editor files
*.sublime-project
*.sublime-workspace
*.komodoproject
